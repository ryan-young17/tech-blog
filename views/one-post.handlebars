<div class="card mt-5">
  <article class="card-body">
    <h3>{{title}}</h3>
    <p>{{content}}</p>
    <strong>Posted by: {{user.username}} on {{format_date created_at}}</strong>
  </article>
</div>
{{#if loggedIn}}
<form id="commentForm" class="mt-3">
  <div class="mb-3">
    <label class="form-label text-light">Comment</label>
    <textarea id="blog-comment" class="form-control"></textarea>
  </div>
  <button data-id="{{id}}" id="purpleBtn" class="btn border border-light text-light">Add Comment</button>
</form>
{{/if}}


{{#if comments}}
<h2 class="text-light text-center mt-4 mb-4">Comments</h2>
{{#each comments as |comment|}}
<div class="card commentCard border border-light mt-3">
  <article class="card-body">
      <div>
        <h5 class="text-light">{{user.username}} on {{format_date createdAt}}</h5>
      </div>
      <div>
        <p class="text-light">{{comment.comment_text}}</p>
      </div>
  </article>
</div>
{{/each}}
{{/if}}

<script src="/js/comment.js"></script>