<div class="card m-5">
  <div class="card-header">
    <h2>Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div>
        <label for="username-input-signup" class="form-label">Username</label>
        <input type="text" id="username-input-signup" class="form-control mb-2"/>
      </div>
      <div>
        <label for="password-input-signup" class="form-label">Password</label>
        <input type="password" id="password-input-signup" class="form-control"/>
      </div>
      <div class="mt-4">
        <button type="submit" id="signup-btn" class="btn me-1 text-light">Sign Up</button>
        <span>or</span>
        <button class="btn ms-1" id="purpleBtn">
          <a class="text-light text-decoration-none" href="/login">Login</a>
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>