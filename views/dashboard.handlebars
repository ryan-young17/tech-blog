{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul>
    {{#each posts as |post|}}
        <ul>
            <article>
                <div>
                    <p>{{title}}</p>
                </div>
                <div>
                    <strong>Posted on {{format_date created_at}}</strong>
                </div>
            </article>
        </ul>
    {{/each}}    
    </ul>
</section>
{{else}}
<section>
    <h2>You don't have any posts yet. Click below to add your first one!</h2>
</section>
{{/if}}

<div>
    <button type="submit"><a href="dashboard/create">Create New Post</a></button>
</div>